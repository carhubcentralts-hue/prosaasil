# Environment Variables Template for AgentLocator CRM
# Copy this file to .env and fill in your actual values

# === DOMAIN & PUBLIC URLS ===
PUBLIC_HOST=https://your-replit-url.replit.app
PUBLIC_BASE_URL=https://your-replit-url.replit.app

# === DATABASE ===
DATABASE_URL=postgresql://user:password@host:port/database

# === OPENAI API ===
OPENAI_API_KEY=sk-your-openai-api-key

# === TWILIO CREDENTIALS ===
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token

# === WHATSAPP CONFIGURATION ===
WHATSAPP_PROVIDER=auto
BAILEYS_OUTBOUND_URL=https://your-baileys-domain:3001/send
BAILEYS_WEBHOOK_SECRET=your-secret-token

# === GOOGLE CLOUD SERVICES ===
GOOGLE_STT_PROJECT_ID=your-gcp-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/gcp-credentials.json

# === VOICE PARAMETERS (OPTIONAL) ===
MIN_UTT_SEC=1.5
MAX_UTT_SEC=8.0
VAD_RMS=65
BARGE_IN_VOICE_FRAMES=40
VAD_HANGOVER_MS=400
REPLY_REFRACTORY_MS=1500
TTS_SPEAKING_RATE=1.1

# === SECURITY ===
FLASK_SECRET_KEY=your-super-secret-key
SESSION_TIMEOUT=3600
# ================================================================
# üéôÔ∏è HEBREW TTS - NATURAL VOICE CONFIGURATION
# ================================================================
# Production-grade Hebrew Text-to-Speech with Google Cloud
# Implements natural pronunciation, telephony optimization, and SSML

# ‚úÖ 1. VOICE SELECTION
# -----------------------------------------------------------------
# Options: he-IL-Wavenet-A, he-IL-Wavenet-B, he-IL-Wavenet-C, he-IL-Wavenet-D
# Recommended: D (female, natural) or C (female, professional)
TTS_VOICE=he-IL-Wavenet-D

# ‚úÖ 2. PROSODY (Speaking Style)
# -----------------------------------------------------------------
# Speaking Rate: 0.90 (slow) ‚Üí 1.0 (normal) ‚Üí 1.2 (fast)
# Recommended: 0.96 for natural, clear speech
TTS_RATE=0.96

# Pitch: -20.0 (very low) ‚Üí 0.0 (neutral) ‚Üí 20.0 (very high)
# Recommended: -2.0 for warm, natural female voice
TTS_PITCH=-2.0

# ‚úÖ 3. SSML (Smart Pronunciation)
# -----------------------------------------------------------------
# Enable SSML Builder for automatic pronunciation fixes:
# - Hebrew numbers ‚Üí spoken format
# - Acronyms (CRM, AI) ‚Üí spelled correctly
# - Domain terms ‚Üí proper pronunciation
# - Micro-breaks before phone numbers/names
ENABLE_TTS_SSML_BUILDER=true

# ‚úÖ 4. PUNCTUATION ENHANCEMENT
# -----------------------------------------------------------------
# Polish Hebrew punctuation from STT before TTS:
# - Add commas after transition words
# - Clean up "◊ê◊î", "◊ê◊û◊û" ‚Üí "..."
# - Add periods at sentence end
ENABLE_HEBREW_GRAMMAR_POLISH=true

# ‚úÖ 5. CACHING
# -----------------------------------------------------------------
# Cache TTS results for common phrases (faster responses)
TTS_CACHE_ENABLED=true

# ================================================================
# üìã USAGE NOTES
# ================================================================
#
# A/B Testing:
# Try these combinations to find your perfect voice:
#
# Combination 1 (Professional & Clear):
#   TTS_VOICE=he-IL-Wavenet-D
#   TTS_RATE=0.96
#   TTS_PITCH=-2.0
#
# Combination 2 (Natural & Warm):
#   TTS_VOICE=he-IL-Wavenet-C
#   TTS_RATE=0.98
#   TTS_PITCH=0.0
#
# Combination 3 (Faster, Energetic):
#   TTS_VOICE=he-IL-Wavenet-D
#   TTS_RATE=1.05

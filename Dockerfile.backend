# ===========================================
# ProSaaS Backend - Python Flask + ASGI
# ===========================================
FROM python:3.11-slim

WORKDIR /app

# Install system dependencies including:
# - ffmpeg for audio conversion
# - Playwright dependencies for HTMLâ†’PNG rendering
# - poppler-utils for PDF processing (optional, pymupdf is preferred)
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    libpq-dev \
    curl \
    openssl \
    ffmpeg \
    # Playwright/Chromium dependencies for HTMLâ†’PNG
    libnss3 \
    libnspr4 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libcups2 \
    libdrm2 \
    libxkbcommon0 \
    libxcomposite1 \
    libxdamage1 \
    libxfixes3 \
    libxrandr2 \
    libgbm1 \
    libasound2 \
    && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml ./
COPY server/ ./server/
COPY asgi.py wsgi.py run_server.py ./

# ðŸ”¥ PYTHON ENVIRONMENT FIX: Ensure consistent Python interpreter
# Install all dependencies to the default Python location
# This ensures both `python` and `python3` use the same packages
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir .

# Install Playwright browsers (only Chromium for HTMLâ†’PNG)
RUN pip install playwright && \
    playwright install --with-deps chromium

RUN mkdir -p server/public

RUN mkdir -p storage/recordings storage/whatsapp logs

# ðŸ”¥ PYTHON ENVIRONMENT: Ensure python and python3 are the same
# This prevents issues where worker might use python3 but packages are in python
ENV PYTHONUNBUFFERED=1
ENV PORT=5000
ENV FLASK_ENV=production

EXPOSE 5000

HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD curl -f http://localhost:5000/health || exit 1

# ðŸ”¥ FIX: Use Uvicorn with multiple workers for production
# This handles concurrent WhatsApp messages without ECONNABORTED timeouts
# 4 workers = good for 2-4 CPU cores
# Note: Using uvicorn directly for now, can switch to gunicorn later
CMD ["uvicorn", "asgi:app", "--host", "0.0.0.0", "--port", "5000", \
     "--workers", "4", \
     "--timeout-keep-alive", "75", \
     "--timeout-graceful-shutdown", "30", \
     "--log-level", "info"]

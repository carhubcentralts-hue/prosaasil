# .replit â€” Workspace only
run = "python -m gunicorn wsgi:app -k eventlet -w 1 -b 0.0.0.0:${PORT:-3000} --timeout 120 --keep-alive 75 --log-level info --access-logfile - --error-logfile -"

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH       = "."
EVENTLET_NO_GREENDNS = "1"
EVENTLET_HUB         = "select"

[deployment]
build = ["sh", "-c", "curl -fsSL https://astral.sh/uv/install.sh | sh && ~/.local/bin/uv python install 3.11 && ~/.local/bin/uv pip install -r requirements.txt"]
run = ["sh", "-c", "~/.local/bin/uv run --python 3.11 -m gunicorn wsgi:app -k eventlet -w 1 -b 0.0.0.0:$PORT --worker-connections 256 --timeout 120 --keep-alive 75 --log-level info --access-logfile - --error-logfile -"]
deploymentTarget = "cloudrun"

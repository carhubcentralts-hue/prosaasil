modules = ["python-3.11", "postgresql-16", "nodejs-20", "python3"]
run = "python3 -m gunicorn -k eventlet -w 1 -b 0.0.0.0:5000 main:app"

[deployment]
deploymentTarget = "autoscale"
build = ["pip","install","-r","requirements.txt"]
run   = ["python3","-m","gunicorn","-k","eventlet","-w","1","-b","0.0.0.0:5000","main:app"]

[env]
PORT = "5000"
PYTHONUNBUFFERED = "1"
PYTHONPATH = "."

[agent]
integrations = ["javascript_paypal==1.0.0", "javascript_openai==1.0.0", "javascript_websocket==1.0.0"]

[nix]
channel = "stable-25_05"
packages = ["c-ares", "cargo", "ffmpeg-full", "freetype", "grpc", "iana-etc", "lcms2", "libiconv", "libimagequant", "libjpeg", "libsndfile", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "rustc", "tcl", "tk", "zlib"]

[[ports]]
localPort = 4000
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 5001
externalPort = 3000

[[ports]]
localPort = 8080
externalPort = 8080

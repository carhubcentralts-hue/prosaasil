# .replit â€” Workspace only
run = "honcho start -f Procfile"
modules = ["python-3.11", "postgresql-16", "nodejs-20", "python3"]

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH       = "."
EVENTLET_NO_GREENDNS = "1"
EVENTLET_HUB         = "poll"

[deployment]
run = ["sh", "-c", "bash ./start_production.sh"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "pip install ."]

[nix]
channel = "stable-25_05"
packages = ["c-ares", "cargo", "ffmpeg", "ffmpeg-full", "freetype", "glibcLocales", "grpc", "iana-etc", "lcms2", "libev", "libiconv", "libimagequant", "libjpeg", "libsndfile", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "rustc", "tcl", "tk", "websocat", "xsimd", "zlib"]

[[ports]]
localPort = 5000
externalPort = 80

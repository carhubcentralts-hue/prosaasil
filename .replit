# .replit â€” Workspace only
run = "python -m gunicorn wsgi:app -k eventlet -w 1 -b 0.0.0.0:${PORT:-3000} --timeout 120 --keep-alive 75 --log-level info --access-logfile - --error-logfile -"
modules = ["python-3.11"]

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH       = "."
EVENTLET_NO_GREENDNS = "1"
EVENTLET_HUB         = "select"

[deployment]
build = ["sh", "-c", "uv pip install --upgrade pip setuptools wheel && uv pip install -r requirements.txt"]
run = ["sh", "-c", "uv run python -m gunicorn wsgi:app -k eventlet -w 1 -b 0.0.0.0:$PORT --timeout 120 --keep-alive 75 --log-level info --access-logfile - --error-logfile -"]
deploymentTarget = "cloudrun"

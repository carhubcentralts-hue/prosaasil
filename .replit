# .replit â€” Workspace only
run = "python -m gunicorn wsgi:app -k eventlet -w 1 -b 0.0.0.0:5000 --timeout 60 --keep-alive 30 --log-level info --access-logfile - --error-logfile - --preload"
modules = ["python-3.11", "postgresql-16", "nodejs-20", "python3"]

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH       = "."
EVENTLET_NO_GREENDNS = "1"
EVENTLET_HUB         = "poll"

[deployment]
run = ["sh", "-c", "gunicorn wsgi:app -k eventlet -w 1 -b 0.0.0.0:$PORT --timeout 120 --log-level info"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "cd baileys-service && npm install"]

[nix]
channel = "stable-25_05"
packages = ["c-ares", "cargo", "ffmpeg", "ffmpeg-full", "freetype", "grpc", "iana-etc", "lcms2", "libev", "libiconv", "libimagequant", "libjpeg", "libsndfile", "libtiff", "libwebp", "libxcrypt", "openjpeg", "openssl", "pkg-config", "rustc", "tcl", "tk", "websocat", "xsimd", "zlib"]

[[ports]]
localPort = 3000
externalPort = 3000

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

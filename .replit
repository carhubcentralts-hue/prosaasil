run = "honcho start -f Procfile"
modules = ["python-3.11", "nodejs-20", "python3", "postgresql-16"]

[env]
PYTHONUNBUFFERED = "1"
PYTHONPATH       = "."
EVENTLET_NO_GREENDNS = "1"
EVENTLET_HUB         = "poll"

[deployment]
run = ["sh", "-c", "bash ./start_production.sh"]
deploymentTarget = "cloudrun"
build = ["sh", "-c", "bash ./build_production.sh"]

[nix]
